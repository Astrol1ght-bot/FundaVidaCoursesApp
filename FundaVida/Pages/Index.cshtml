        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#cr" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>

<!--- Carousel --->

<br />
<br />
<div class="row">
    <div class="col-md-12">
        <div id="top_1" class="col-md-4">
            <div class="titlebox">
                OFERTA
                <br />
                DE CURSOS
            </div>
            <hr />
        </div>
    </div>
</div>

<br />
<br />

<div class="row">
    <main class="cd-main-content">
        <section class="cd-galley">

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var item in Model.CourseList)
                {
                    <div class="col">
                        <div class="card" style="width: 18rem">
                            @if (item.ImageData != null)
                            {
                                var base64 = Convert.ToBase64String(item.ImageData);
                                var img = string.Format("data:image/jpg;base64,{0}", base64);
                                <img class="card-img-top" src="@img" />
                            }
                            else
                            {

                                <p>no image</p>
                            }

                            <div class="card-body">
                                <div class="card-title">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </div>
                                <div class="card-text">
                                    @*
                                @Html.DisplayFor(motelItem => item.Description)*@
                                @Html.DisplayNameFor(modelItem => item.Modality.Name) : 
                                    @Html.DisplayFor(modelItem => item.Modality.Name)
                                </div>
                                <br />
                                    <button type="button" class="btn btn-info stretched-link" asp-page="_EnrollStudent" asp-route-id="@item.CourseId">
                                        Matricula Ya!
                                    </button>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </section>
    </main>
</div>

<div class="modal fade" id="enroll" tabindex="-1" aria-labelledby="Enroll Student" aria-hidden="true"></div>



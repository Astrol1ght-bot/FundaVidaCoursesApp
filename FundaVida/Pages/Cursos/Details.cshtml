@page
@model FundaVida.Pages.Cursos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso.CursoNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.CursoNombre)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Curso.CursoImagen != null)
            {
                var base64 = Model.Curso.CursoImagen;
                var img = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@img" width="100px" height="100px" />
            }
            else
            {

                <p>no image</p>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.CursoImagen)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Curso?.CursoId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

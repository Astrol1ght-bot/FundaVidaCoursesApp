@page
@model FundaVida.Pages.Courses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Estás a punto de eliminar el curso "@Model.Course.Name"</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.ImageData)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Course.ImageData != null)
            {
                var base64 = Convert.ToBase64String(Model.Course.ImageData);
                var img = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@img" width="100px" height="100px" />
            }
            else
            {
                <p>no image</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Modality.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Modality.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Professor.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Professor.FullName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Course.CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
